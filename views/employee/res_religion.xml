<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<!--Form View-->
	<record model="ir.ui.view" id="view_res_religion_form">
		<field name="name">res.religion.form</field>
		<field name="model">res.religion</field>
		<field name="arch" type="xml">
			<form string="Religion">
                <sheet>
					<group>
						<field name="name"/>
					</group>
                </sheet>
			</form>
		</field>
	</record>

	<!--Tree View-->
	<record model="ir.ui.view" id="view_res_religion_tree">
		<field name="name">res.religion.tree</field>
		<field name="model">res.religion</field>
		<field name="arch" type="xml">
			<tree string="Religion">
                <field name="name"/>
			</tree>
		</field>
	</record>

	<!--Action-->
	<record model="ir.actions.act_window" id="action_res_religion">
        <field name="name">Religion</field>
        <field name="res_model">res.religion</field>
        <field name="view_type">form</field>
        <field name="limit">50</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
