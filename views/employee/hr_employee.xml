<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<!--Form View-->
	<record model="ir.ui.view" id="view_hr_employee_form">
		<field name="name">hr.employee.form</field>
		<field name="model">hr.employee</field>
		<field name="arch" type="xml">
			<form string="Employee">
                <sheet>
                    <separator string="Employee" style="text-align:center;"/>
                    <field name="name"/>
                    <field name="employee_uid"/>
                    <field name="progress" invisible="1"/>
                    <field name="access" invisible="1"/>
					<notebook>
						<page string="Official Information">
							<group col="4">
								<field name="work_email"/>
								<field name="work_mobile"/>
								<field name="doj"/>
								<field name="date_of_relieving"/>
								<field name="department"/>
								<field name="designation"/>
								<field name="reporting_to"/>
								<field name="employee_category"/>
							</group>
						</page>
						<page string="Personnel Information">
							<group col="4">
								<field name="age"/>
                    			<field name="blood_group"/>
                    			<field name="marital_status"/>
								<field name="gender"/>
								<field name="caste"/>
								<field name="religion"/>
								<field name="physically_challenged"/>
								<field name="nationality"/>
								<field name="mother_toungue"/>
								<field name="language_known" widget="many2many_tags"/>
								<field name="personnel_mobile"/>
								<field name="personnel_email"/>
								<field name="contact_address"/>
								<field name="is_contact_differ_permanent"/>
								<field name="permanent_address"/>
							</group>
						</page>
						<page string="Family Details">
							<field name="family_members"/>
						</page>
						<page string="Qualification">
							<field name="qualification"/>
						</page>
						<page string="Experience">
							<field name="experience"/>
						</page>
						<page string="Leave">
							<group>
								<field name="leave_level_id"/>
							</group>
							<field name="leave"/>
						</page>
						<page string="Account Information">
							<group>
								<field name="bank"/>
							</group>
						</page>
						<page string="Attachment">
							<field name="attachment"/>
						</page>
					</notebook>
                </sheet>
			</form>
		</field>
	</record>

	<!--Tree View-->
	<record model="ir.ui.view" id="view_hr_employee_tree">
		<field name="name">hr.employee.tree</field>
		<field name="model">hr.employee</field>
		<field name="arch" type="xml">
			<tree string="Employee">
                <field name="name"/>
                <field name="employee_uid"/>
				<field name="department"/>
                <field name="designation"/>
                <field name="reporting_to"/>
                <field name="work_email"/>
                <field name="work_mobile"/>
			</tree>
		</field>
	</record>

	<!--Action-->
	<record model="ir.actions.act_window" id="action_hr_employee">
        <field name="name">Employee</field>
        <field name="res_model">hr.employee</field>
        <field name="view_type">form</field>
        <field name="limit">50</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
