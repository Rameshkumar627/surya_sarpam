<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<!--Form View-->
	<record model="ir.ui.view" id="view_opt_schedule_form">
		<field name="name">opt.schedule.form</field>
		<field name="model">opt.schedule</field>
		<field name="arch" type="xml">
			<form string="OPT Schedule">
                <sheet>
					<group col="4">
						<field name="patient_id"/>
						<field name="employee_id"/>
						<field name="start_date"/>
						<field name="end_date"/>
						<field name="others"/>
						<field name="scheduled_by"/>
						<field name="scheduled_on"/>
					</group>
                </sheet>
			</form>
		</field>
	</record>

	<!--Tree View-->
	<record model="ir.ui.view" id="view_opt_schedule_tree">
		<field name="name">opt.schedule.tree</field>
		<field name="model">opt.schedule</field>
		<field name="arch" type="xml">
			<tree string="OPT Schedule">
                <field name="patient_id"/>
                <field name="employee_id"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="others"/>
                <field name="scheduled_by"/>
                <field name="scheduled_on"/>
			</tree>
		</field>
	</record>

    <!--Calendar View-->
    <record id="view_opt_schedule_calendar" model="ir.ui.view">
            <field name="name">opt.schedule.calendar</field>
            <field name="model">opt.schedule</field>
            <field name="arch" type="xml">
                <calendar string="OPT Schedule" color="employee_id" date_start="start_date"
                          date_stop="end_date" quick_add="False" mode="day">
                    <field name="patient_id"/>
                    <field name="employee_id"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="others"/>
                    <field name="scheduled_by"/>
                    <field name="scheduled_on"/>
                </calendar>
            </field>
        </record>

	<!--Action-->
	<record model="ir.actions.act_window" id="action_opt_schedule">
        <field name="name">OPT Schedule</field>
        <field name="res_model">opt.schedule</field>
        <field name="view_type">form</field>
        <field name="limit">50</field>
        <field name="view_mode">calendar,tree,form</field>
    </record>

</odoo>
