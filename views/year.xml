<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<!--Form View-->
	<record model="ir.ui.view" id="view_year_year_form">
		<field name="name">year.year.form</field>
		<field name="model">year.year</field>
		<field name="arch" type="xml">
			<form string="Year">
                <sheet>
					<group>
						<field name="name"/>
						<field name="previous_year"/>
						<field name="next_year"/>
					</group>
					<notebook>
						<page string="Month Detail">
							<field name="month_detail"/>
						</page>
					</notebook>
                </sheet>
			</form>
		</field>
	</record>

	<!--Tree View-->
	<record model="ir.ui.view" id="view_year_year_tree">
		<field name="name">year.year.tree</field>
		<field name="model">year.year</field>
		<field name="arch" type="xml">
			<tree string="Year">
                <field name="name"/>
				<field name="previous_year"/>
				<field name="next_year"/>
			</tree>
		</field>
	</record>

	<!--Action-->
	<record model="ir.actions.act_window" id="action_year_year">
        <field name="name">Year</field>
        <field name="res_model">year.year</field>
        <field name="view_type">form</field>
        <field name="limit">50</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
