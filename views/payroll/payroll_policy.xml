<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<!--Form View-->
	<record model="ir.ui.view" id="view_payroll_policy_form">
		<field name="name">payroll.policy.form</field>
		<field name="model">payroll.policy</field>
		<field name="arch" type="xml">
			<form string="Payroll Policy">
                <sheet>
					<group>
						<field name="year_id"/>
					</group>
                </sheet>
                <notebook>
                    <page string="Policy">
                        <field name="policy"/>
                    </page>
                </notebook>
			</form>
		</field>
	</record>

	<!--Tree View-->
	<record model="ir.ui.view" id="view_payroll_policy_tree">
		<field name="name">payroll.policy.tree</field>
		<field name="model">payroll.policy</field>
		<field name="arch" type="xml">
			<tree string="Payroll Policy">
                <field name="year_id"/>
			</tree>
		</field>
	</record>

	<!--Action-->
	<record model="ir.actions.act_window" id="action_payroll_policy">
        <field name="name">Payroll Policy</field>
        <field name="res_model">payroll.policy</field>
        <field name="view_type">form</field>
        <field name="limit">50</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
