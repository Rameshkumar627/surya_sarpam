<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<!--Form View-->
	<record model="ir.ui.view" id="view_day_day_form">
		<field name="name">day.day.form</field>
		<field name="model">day.day</field>
		<field name="arch" type="xml">
			<form string="Day">
                <sheet>
					<group>
						<field name="name"/>
						<field name="previous_day"/>
						<field name="next_day"/>
						<field name="month_id"/>
						<field name="week_id"/>
					</group>
                </sheet>
			</form>
		</field>
	</record>

	<!--Tree View-->
	<record model="ir.ui.view" id="view_day_day_tree">
		<field name="name">day.day.tree</field>
		<field name="model">day.day</field>
		<field name="arch" type="xml">
			<tree string="Day">
                <field name="name"/>
                <field name="previous_day"/>
                <field name="next_day"/>
                <field name="month_id"/>
                <field name="week_id"/>
			</tree>
		</field>
	</record>

	<!--Action-->
	<record model="ir.actions.act_window" id="action_day_day">
        <field name="name">Day</field>
        <field name="res_model">day.day</field>
        <field name="view_type">form</field>
        <field name="limit">50</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
