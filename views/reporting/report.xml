<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<!--Form View-->
	<record model="ir.ui.view" id="view_report_report_form">
		<field name="name">report.report.form</field>
		<field name="model">report.report</field>
		<field name="arch" type="xml">
			<form string="Report">
                <sheet>
					<group>
						<field name="name"/>
						<field name="report_type"/>
						<field name="others"/>
						<field name="filename"/>
						<field name="file_output"/>
					</group>
					<button name="trigger_field_data" string="Button" type="object"/>
                    <notebook>
						<page string="Search Detail">
							<group col="4">
								<field name="model"/>
								<field name="sorting"/>
							</group>
							<field name="search_detail">
								<tree editable="bottom">
									<field name="data_field"/>
									<field name="operator"/>
									<field name="value"/>
								</tree>
							</field>
						</page>
                        <page string="Column Detail">
							<field name="column_detail">
								<tree>
									<field name="name"/>
									<field name="data_field"/>
								</tree>
								<form>
									<group col="4">
										<field name="column_seq"/>
										<field name="name"/>
										<field name="data_field"/>
										<field name="sum_footer"/>
									</group>
									<notebook>
										<page string="Excel Design">
											<group>
												<field name="header_style_excel"/>
												<field name="body_style_excel"/>
												<field name="footer_style_excel"/>
											</group>
										</page>
										<page string="PDF/HTML Design">
											<group>
												<field name="header_style"/>
												<field name="body_style"/>
												<field name="footer_style"/>
											</group>
										</page>
									</notebook>
								</form>
							</field>
                        </page>
						<page string="Report Design">
							<field name="report_design">
								<tree editable="bottom">
									<field name="row_col"/>
									<field name="style_id"/>
									<field name="template"/>
									<field name="order_seq"/>
									<field name="name"/>
								</tree>
							</field>
                        </page>
                    </notebook>
                </sheet>
			</form>
		</field>
	</record>

	<!--Tree View-->
	<record model="ir.ui.view" id="view_report_report_tree">
		<field name="name">report.report.tree</field>
		<field name="model">report.report</field>
		<field name="arch" type="xml">
			<tree string="Report">
                <field name="name"/>
                <field name="others"/>
			</tree>
		</field>
	</record>

	<!--Action-->
	<record model="ir.actions.act_window" id="action_report_report">
        <field name="name">Report</field>
        <field name="res_model">report.report</field>
        <field name="view_type">form</field>
        <field name="limit">50</field>
        <field name="view_mode">tree,form</field>
    </record>


</odoo>
