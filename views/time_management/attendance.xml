<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<!--Form View-->
	<record model="ir.ui.view" id="view_time_attendance_form">
		<field name="name">time.attendance.form</field>
		<field name="model">time.attendance</field>
		<field name="arch" type="xml">
			<form string="Attendance">
                <header>
                    <field name="progress" widget="statusbar"/>
                </header>
                <sheet>
					<group>
						<field name="date"/>
						<field name="month_attendance_id"/>
					</group>
                    <notebook>
                        <page string="Attendance Detail">
                            <field name="attendance_detail">
                                <tree>
                                    <field name="employee_id"/>
                                    <field name="shift"/>
                                    <field name="shift_change"/>
                                    <field name="expected_in" widget="float_time"/>
                                    <field name="actual_in" widget="float_time"/>
                                    <field name="expected_out"/>
                                    <field name="actual_out"/>
                                    <field name="working_hrs"/>
                                    <field name="worked_hrs"/>
                                    <field name="attendance"/>
                                    <field name="permission"/>
                                    <field name="comment"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                    <field name="comment" placeholder="Comment.."/>
                </sheet>
			</form>
		</field>
	</record>

	<!--Tree View-->
	<record model="ir.ui.view" id="view_time_attendance_tree">
		<field name="name">time.attendance.tree</field>
		<field name="model">time.attendance</field>
		<field name="arch" type="xml">
			<tree string="Attendance">
                <field name="date"/>
                <field name="month_attendance_id"/>
                <field name="progress"/>
			</tree>
		</field>
	</record>

	<!--Action-->
	<record model="ir.actions.act_window" id="action_time_attendance">
        <field name="name">Attendance</field>
        <field name="res_model">time.attendance</field>
        <field name="view_type">form</field>
        <field name="limit">50</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
