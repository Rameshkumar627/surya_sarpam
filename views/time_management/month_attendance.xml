<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<!--Form View-->
	<record model="ir.ui.view" id="view_time_attendance_month_form">
		<field name="name">time.attendance.month.form</field>
		<field name="model">time.attendance.month</field>
		<field name="arch" type="xml">
			<form string="Monthly Attendance">
                <header>
                    <field name="progress" widget="statusbar"/>
                </header>
                <sheet>
					<group>
						<field name="sequence"/>
						<field name="month_id"/>
					</group>
					<button name="trigger_attendance" string="Month Closing" type="object"/>
                    <notebook>
						<page string="Attendance Detail">
                        	<field name="time_attendance_ids"/>
						</page>
                    </notebook>

                </sheet>
			</form>
		</field>
	</record>

	<!--Tree View-->
	<record model="ir.ui.view" id="view_time_attendance_month_tree">
		<field name="name">time.attendance.month.tree</field>
		<field name="model">time.attendance.month</field>
		<field name="arch" type="xml">
			<tree string="Monthly Attendance">
                <field name="sequence"/>
				<field name="month_id"/>
				<field name="progress"/>
			</tree>
		</field>
	</record>

	<!--Action-->
	<record model="ir.actions.act_window" id="action_time_attendance_month">
        <field name="name">Monthly Attendance</field>
        <field name="res_model">time.attendance.month</field>
        <field name="view_type">form</field>
        <field name="limit">50</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
