<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<!--Form View-->
	<record model="ir.ui.view" id="view_low_stock_form">
		<field name="name">low.stock.form</field>
		<field name="model">low.stock</field>
		<field name="arch" type="xml">
			<form string="Low Stock">
				<header>
					<button name="ramesh" string="Ramesh" type="action"/>
					<field name="progress" widget="statusbar"/>
				</header>
                <sheet>
					<group>
						<field name="product_id"/>
						<field name="uom_id"/>
						<field name="quantity"/>
					</group>
				</sheet>
			</form>
		</field>
	</record>

	<!--Tree View-->
	<record model="ir.ui.view" id="view_low_stock_tree">
		<field name="name">low.stock.tree</field>
		<field name="model">low.stock</field>
		<field name="arch" type="xml">
			<tree string="Low Stock">
                <field name="product_id"/>
                <field name="uom_id"/>
                <field name="quantity"/>
			</tree>
		</field>
	</record>

	 <record id="create_indent_window_action" model="ir.actions.act_window">
		<field name="name">Create Indent</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">purchase.indent</field>
		<field name="view_type">form</field>
		<field name="view_mode">form</field>
	 </record>

	<record model="ir.values" id="low_stock_indent_raise_button">
		<field name="model_id" ref="surya_sarpam.model_low_stock" />
		<field name="name">Create Indent</field>
		<field name="key2">client_action_multi</field>
		<field name="value" eval="'ir.actions.act_window,' + str(ref('create_indent_window_action'))" />
		<field name="key">action</field>
		<field name="model">low.stock</field>
	</record>


	<!--Action-->
	<record model="ir.actions.act_window" id="action_low_stock">
        <field name="name">Low Stock</field>
        <field name="res_model">low.stock</field>
        <field name="view_type">form</field>
        <field name="limit">50</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
