<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<!--Form View-->
	<record model="ir.ui.view" id="view_purchase_quotation_form">
		<field name="name">purchase.quotation.form</field>
		<field name="model">purchase.quotation</field>
		<field name="arch" type="xml">
			<form string="Quotation">
                <header>
					<button name="trigger_update" attrs="{'readonly': [('progress', '!=', 'draft')]}"
							string="Update" type="object"/>
                    <field name="progress" widget="statusbar"/>
                </header>
                <sheet>
					<separator string="Quotation" style="text-align:center;"/>
                    <field name="sequence" readonly="1"/>
                    <group col="4">
						<field name="date" readonly="1"/>
						<field name="indent_id" readonly="1"/>
						<field name="vendor_id" readonly="1"/>
						<field name="vs_id" readonly="1"/>
						<field name="vendor_ref" attrs="{'readonly': [('progress', '!=', 'draft')]}" required="1"/>
						<field name="processed_by" readonly="1"/>
						<field name="processed_on" readonly="1"/>
					</group>
                    <notebook>
						<page string="Quotation Detail">
							<field name="quotation_detail" attrs="{'readonly': [('progress', '!=', 'draft')]}">
								<tree editable="bottom" create="false">
									<field name="product_id" readonly="1"/>
									<field name="uom_id" readonly="1"/>
									<field name="requested_quantity" readonly="1"/>
									<field name="accepted_quantity"/>
									<field name="unit_price"/>
									<field name="discount"/>
									<field name="tax_id"/>
									<field name="total" readonly="1"/>
									<field name="progress" invisible="1"/>
								</tree>
							</field>
						</page>
					</notebook>

					<group>
					<div style="float: left; width: 100%;">
						<table class="o_list_view table table-condensed table-striped mask">
							<thead>
								<tr>
									<th>sgst</th>
									<th>cgst</th>
									<th>igst</th>
								</tr>
							</thead>
							<tfoot>
								<tr><td></td><td></td><td></td></tr>
							</tfoot>
							<tbody>
								<tr>
									<td><field name="sgst" nolabel="1"/></td>
									<td><field name="cgst" nolabel="1"/></td>
									<td><field name="igst" nolabel="1"/></td>
								</tr>
							</tbody>
						</table>

						<table class="o_list_view table table-condensed table-striped mask">
							<tr>
								<th>Taxed Amount</th>
								<td><field name="taxed_amount" nolabel="1"/></td>
							</tr>
							<tr>
								<th>Un Taxed Amount</th>
								<td><field name="un_taxed_amount" nolabel="1"/></td>
							</tr>
							<tr>
								<th>Discount Amount</th>
								<td><field name="discount_amount" nolabel="1"/></td>
							</tr>
							<tr>
								<th>Discounted Amount</th>
								<td><field name="discounted_amount" nolabel="1"/></td>
							</tr>

						</table>
					</div>

					<div style="float: right; width: 50%;">
						<table class="o_list_view table table-condensed table-striped mask">
							<tr>
								<th>Total</th>
								<td><field name="total" nolabel="1"/></td>
							</tr>
							<tr>
								<th>Freight Charges</th>
								<td><field name="freight_amount" nolabel="1"/></td>
							</tr>
							<tr>
								<th>Tax Amount</th>
								<td><field name="tax_amount" nolabel="1"/></td>
							</tr>
							<tr>
								<th>Gross Amount</th>
								<td><field name="gross_amount" nolabel="1"/></td>
							</tr>
							<tr>
								<th>Round-Off</th>
								<td><field name="round_off" nolabel="1"/></td>
							</tr>
							<tr>
								<th>Net Amount</th>
								<td><field name="net_amount" nolabel="1"/></td>
							</tr>

						</table>
					</div>
					</group>

					<field name="comment" placeholder="Comment..." attrs="{'readonly': [('progress', '!=', 'draft')]}"/>
                </sheet>
			</form>
		</field>
	</record>

	<!--Tree View-->
	<record model="ir.ui.view" id="view_purchase_quotation_tree">
		<field name="name">purchase.quotation.tree</field>
		<field name="model">purchase.quotation</field>
		<field name="arch" type="xml">
			<tree string="Quotation">
                <field name="date"/>
                <field name="indent_id"/>
			</tree>
		</field>
	</record>

	<!--Action-->
	<record model="ir.actions.act_window" id="action_purchase_quotation">
        <field name="name">Quotation</field>
        <field name="res_model">purchase.quotation</field>
        <field name="view_type">form</field>
        <field name="limit">50</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
